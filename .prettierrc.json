{
  "printWidth": 80,
  "endOfLine": "lf",
  "tabWidth": 2,
  "useTabs": false,
  "semi": true,
  "trailingComma": "all",
  "objectWrap": "collapse",
  "arrowParens": "avoid",
  "singleQuote": true,
  "bracketSpacing": true,
  "bracketSameLine": false,
  "overrides": [
    { "files": "**/payload.template.js", "options": { "printWidth": 120 } }
  ],
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrder": ["^node:", "yargs"]
}
